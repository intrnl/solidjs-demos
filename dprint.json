{
	"lineWidth": 120,
	"indentWidth": 2,
	"useTabs": true,
	"typescript": {
		"semiColons": "prefer",
		"quoteStyle": "alwaysSingle",
		"useBraces": "always",
		"bracePosition": "sameLineUnlessHanging",
		"singleBodyPosition": "nextLine",
		"nextControlFlowPosition": "nextLine",
		"trailingCommas": "onlyMultiLine",
		"preferSingleLine": false,
		"operatorPosition": "sameLine",
		"conditionalExpression.operatorPosition": "nextLine",
		"binaryExpression.linePerExpression": true,
		"arrowFunction.useParentheses": "force",
		"jsx.quoteStyle": "preferSingle",
		"functionDeclaration.spaceBeforeParentheses": true,
		"functionExpression.spaceBeforeParentheses": true,
		"method.spaceBeforeParentheses": true,
		"constructor.spaceBeforeParentheses": true,
		"getAccessor.spaceBeforeParentheses": true,
		"setAccessor.spaceBeforeParentheses": true,
		"importDeclaration.sortNamedImports": "caseSensitive",
		"exportDeclaration.sortNamedExports": "caseSensitive"
	},
	"json": {},
	"markdown": {},
	"prettier": {
		"trailingComma": "all",
		"singleQuote": true
	},
	"includes": [
		"**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,css}"
	],
	"excludes": [
		"**/node_modules",
		"dist/",
		"deploy/"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.85.1.wasm",
		"https://plugins.dprint.dev/json-0.17.4.wasm",
		"https://plugins.dprint.dev/markdown-0.15.3.wasm",
		"https://plugins.dprint.dev/prettier-0.26.6.json@0118376786f37496e41bb19dbcfd1e7214e2dc859a55035c5e54d1107b4c9c57"
	]
}
